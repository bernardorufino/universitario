<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="MenuItemView">
        
        <attr name="icon" format="reference"/>
        <attr name="text" format="string" />
        <attr name="divider" format="enum">
            <enum name="none" value="0" />
            <enum name="below" value="1" />
            <enum name="above" value="2" />
            <enum name="both" value="3" />
        </attr>
        
    </declare-styleable>

    <declare-styleable name="DiscreteProgressBarView">

        <attr name="space" format="dimension" />
        <attr name="current" format="float" />
        <attr name="total" format="integer" />

    </declare-styleable>
    
</resources>