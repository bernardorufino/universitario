<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:custom="http://schemas.android.com/apk/res/br.com.bernardorufino.android.universitario">


    <!-- Navigation Menu -->

    <style name="NavMenuStyle">
        <item name="android:background">#2A2A2A</item>
    </style>


    <!-- Context Menu and Dialog Header -->

    <style name="OrangeHeader">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/light_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <!-- These two items below won't work on context menu header -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Course Edit Dialog -->

    <style name="CourseEditBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/light_bg</item>
    </style>

    <style name="CourseEditActions">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="CourseEditButton">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/dialog_button_selector</item>
    </style>


    <!-- Attendance Card -->

    <color name="att_card_dark_text">#707070</color>
    <color name="att_card_light_text">#8D8D8D</color>
    <color name="att_card_fraction_default">#FFFFFF</color><!-- #FCFCFC -->
    <color name="att_card_fraction_pressed">#E8E8E8</color>
    <color name="att_card_bg">#FFFFFF</color>
    <color name="absence_ok">#81C479</color>
    <color name="absence_warning">#F0C64A</color>
    <color name="absence_overflow">#E47E7E</color>
    <color name="absence_remaining">#DDDDDD</color>

    <style name="AttendanceCardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="AttendanceCardUnitControl">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/att_card_light_text</item>
    </style>

    <style name="AttendanceCardUnitControl.Plus">
        <item name="android:background">@drawable/att_card_right_unit_selector</item>
    </style>

    <style name="AttendanceCardUnitControl.Minus">
        <item name="android:background">@drawable/att_card_left_unit_selector</item>
    </style>

    <style name="AttendanceCardFractionControl">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/att_card_fraction_selector</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/att_card_light_text</item>
    </style>

    <style name="AttendanceCardFractionControl.Minus">
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="AttendanceCardFractionControl.Plus">
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="AttendanceCardTitle">
        <item name="android:textColor">@color/att_card_light_text</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@color/att_card_bg</item>
    </style>

    <style name="AttendanceCardProfessor">
        <item name="android:textColor">@color/att_card_dark_text</item>
        <item name="android:paddingTop">-10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/att_card_bg</item>
    </style>

    <style name="AttendanceCardBottomBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:background">@drawable/card_down</item>
    </style>

    <style name="AttendanceCardAbsencesBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="space">3dp</item>
    </style>

    <style name="AttendanceCardAbsencesBadge">
        <!-- item name="android:textColor">#4285F4</item -->
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Fragment Attendance -->

    <style name="CardsList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">34dp</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@drawable/cards_list_selector</item>
    </style>

    <style name="TotalAbsencesShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@drawable/total_absences_shadow</item>
    </style>

    <style name="TotalAbsencesLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>


    <!-- Total Absences Bar -->

    <style name="TotalAbsencesBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/frag_att_total_abscs_bar</item>
    </style>

    <style name="TotalAbsencesText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#444</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>